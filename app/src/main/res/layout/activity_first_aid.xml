<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="dharma.unity.ui.FirstAidActivity">


    <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/head"
            android:gravity="center_horizontal"
            android:text="First Aid"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/head"

            android:background="@color/background2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    android:gravity="center"
                    android:orientation="horizontal"
            >

                <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"

                        android:clickable="true">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@color/backgroundcolor"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/images"
                                android:padding="10dp"
                                android:src="@drawable/fracture"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Fractures"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card2"

                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@color/backgroundcolor"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"

                                android:contentDescription="@string/images"
                                android:padding="10dp"
                                android:src="@drawable/cuts"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Cuts"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    android:gravity="center"
                    android:orientation="horizontal"
            >

                <androidx.cardview.widget.CardView
                        android:id="@+id/card3"

                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"

                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@color/backgroundcolor"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/images"
                                android:padding="10dp"
                                android:src="@drawable/burn"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Burns"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card4"

                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@color/backgroundcolor"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"

                                android:contentDescription="@string/images"
                                android:padding="10dp"
                                android:src="@drawable/snake_bite"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Snake Bites"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    android:gravity="center"
                    android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                        android:id="@+id/card5"

                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"

                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:background="@color/backgroundcolor"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/images"
                                android:padding="10dp"
                                android:src="@drawable/puncher"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Punchers"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
