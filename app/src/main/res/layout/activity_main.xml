<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/main_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/unity_logo" />

        <Button
                android:id="@+id/button_about_us"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="\?"
                android:textAllCaps="false"
                android:textColor="@color/background2"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Unity"
                android:textSize="30sp" />

        <TextView
                android:id="@+id/title_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="Natural Disaster Survival App"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <Button
                android:id="@+id/button_sign_in"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@color/green_login"
                android:text="Log in"
                android:textAllCaps="false"
                android:textColor="@color/background2"
                android:textSize="18sp" />


        <Button
                android:id="@+id/button_offline"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_sign_in"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@color/blue_offline"
                android:text="Offline"
                android:textAllCaps="false"
                android:textColor="@color/background2"
                android:textSize="18sp" />


        <Button
                android:id="@+id/button_alerts"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_offline"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#D34948"
                android:text="Alerts"
                android:textAllCaps="false"
                android:textColor="@color/background2"
                android:textSize="18sp" />

        <Button
                android:id="@+id/button_maps"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_alerts"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="#6F3D7C"
                android:text="Maps"
                android:textAllCaps="false"
                android:textColor="@color/background2"
                android:textSize="18sp" />

        <Button
                android:id="@+id/button_sos"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/button_about_us"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="!"
                android:textAllCaps="false"
                android:textColor="@color/background2"
                android:textSize="18sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

